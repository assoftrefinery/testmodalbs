
<%= form_for(@task, :remote => true) do |f| %>
<div class="bs-callout bs-callout-warning well" style="border-radius: 5px;">
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Asunto' %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label 'Completada?' %><br>
    <%= f.check_box :complete, :class => 'form-control checkbox checkbox-primary' %>
  </div>
  
	<%= f.label 'Imagen' %><br>
	<div class="card-block">
  	<div class="input-group">
    	<span class="input-group-addon"><i class="hi hi-cloud-upload hi-lg text-warning"></i></span>
    			<%= f.file_field :foto, :class => 'form-control' %>
    </div>
    </div>
       
   	<p>
	    <label>
	      <%= f.check_box :remove_foto %>
	      Quitar imagen
	    </label>
  	</p>
    
  <div class="actions">
    <%= f.submit ( f.object.new_record? ? "Crear" : "Actualizar"), :class => 'btn btn-primary btn-block' %>
  </div>
  </div>
<% end %>


     
      


